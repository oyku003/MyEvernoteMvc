@using MyEvernote.Entities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Bootstrap Core CSS -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->

    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Bootstrap Core JavaScript -->

    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @{ 
        EvernoteUser user = null;
        if (Session["login"] !=null)
        {
            user = Session["login"] as EvernoteUser;
        }
    }
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Menü</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">My Evernote</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (user != null)
                    {
                       
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="/Note/MyNotes" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Yönetim<span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Note/AddNew"><span class="glyphicon glyphicon-plus">Not Ekle</span></a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a href="/Note/Index"><span class="glyphicon glyphicon-plus">Notlarım</span></a>
                                </li>
                                <li>
                                    <a href="/Note/MyLikedNotes"><span class="glyphicon glyphicon-plus">Beğendiklerim</span></a>
                                </li>
                                @if (user.IsAdmin)
                                {
                                    <li role="separator" class="divider"></li>
                                            <li>
                                                <a href="/Category/Create"><span class="glyphicon glyphicon-plus">Kategori Ekle</span></a>
                                            </li>
                                            <li>
                                                <a href="/Category/Index"><span class="glyphicon glyphicon-plus">Kategoriler</span></a>
                                            </li>
                                }

                            </ul>
                              </li>
                    }
                    <li>
                        <a href="/Home/MostLiked"><span class="glyphicon glyphicon-heart-empty"></span>En Beğenilenler</a>
                    </li>
                    <li>
                        <a href="/Home/Index"><span class="glyphicon glyphicon-align-justify"></span>Son Yazılar</a>
                    </li>
                    <li>
                        <a href="/Home/About"><span class="glyphicon glyphicon-info-sign"></span>Hakkımızda</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                        <li>
                            <a href="/Home/Login"><span class="glyphicon glyphicon-heart-empty"></span>Giriş</a>
                        </li>
                        <li>
                            <a href="/Home/Register"><span class="glyphicon glyphicon-user"></span>Üye Ol</a>
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle glyphicon glyphicon-user" href="/Home/ShowProfile" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                @user.Username<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/Home/ShowProfile">
                                        <span class="glyphicon glyphicon-user">Profili Göster</span>
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        <a href="/Home/EditProfile"><span class="glyphicon glyphicon-edit">Profili Düzenle</span></a>
                                    </li>
                                    <li>
                                        <a href="/Home/DeleteProfile" onclick="return confirm('Hesabınızı silmek istediğinizden emin misiniz?');"><span class="glyphicon glyphicon-trash">Profili Sil</span></a>
                                    </li>
                                </ul>
</li>
                       

                            <li>
                                <a href="/Home/Logout"><span class="glyphicon glyphicon-heart-empty"></span>Çıkış</a>
                            </li>
                            }



                        </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    @RenderBody()
  

    @RenderSection("footer", required: false)

</body>
</html>
